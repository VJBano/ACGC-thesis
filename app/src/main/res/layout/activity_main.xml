<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_frame"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:textAlignment="center"
    android:visibility="visible"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="173dp"
        android:background="#99141414">

        <EditText
            android:id="@+id/input_ip"
            android:layout_width="281dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_ip_active"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/enter_ip_address"
            android:inputType="textPersonName"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="#0B0000"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/email"
            android:layout_width="281dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="128dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_email_active"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/enter_email"
            android:inputType="textPersonName"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="#090303" />

        <EditText
            android:id="@+id/password"
            android:layout_width="281dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="197dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/custom_pass_active"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPersonName|textPassword"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="#070101" />

        <Button
            android:id="@+id/login"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="89dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="55dp"
            android:background="@drawable/login_btn_style"
            android:fontFamily="sans-serif-light"
            android:text="Log In"
            android:textColor="#130101"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="118dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="44dp"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>